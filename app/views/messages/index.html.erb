<div class="onlineFriends col-sm-2 pull-left">
  <div>
    <span> Search Friends </span>
    <hr>
    <span> pretend online friend</span>
    <hr>
    <span>Pretend online Friend</span>
    <hr>
  </div>
</div>

  <div class="message col-sm-10 pull-right">
    <div class="displayParticipants">
      <span> Participants </span>
      <hr>
    </div>
    <!-- Display each message -->
    <% @message.each do |m| %>
      <article>
        <%= m.user.name %>: <%= m.body %>
      </article>
    <% end %>

    <!-- Form to submit a message-->
    <%= form_for @new_message do |nm| %>
      <%= nm.text_area :body, placeholder: "Write a new message"%>
      <%= nm.submit %>
    <% end %>
  </div>
