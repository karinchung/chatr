<body class="signInBackground">

<div class="row">

  <div class="signIn">
    <h1 class="signIn">Chatr</h1>
    <%= form_tag sessions_path,{:class => 'form-horizontal'} do %>
        <div class="row"><legend class="col-md-4 col-md-offset-4 signIn"></legend></div>
        <fieldset>
            <div class="form-group">
                <%= label_tag :email, '', class: 'col-md-4 control-label' %>
                <div class="col-md-5">
                    <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: "Email" %>
                </div>
            </div>
            <div class="form-group">
                <%= label_tag :password, '', class: 'col-md-4 control-label' %>
                <div class="col-md-5">
                    <%= password_field_tag :password, nil, class: 'form-control', placeholder: "Password" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 col-md-offset-4">
                    <%= submit_tag 'Log in', class: 'btn btn-success' %>
                    <%= link_to "Don't have an account?", new_user_path, class: 'btn btn-primary' %>
                </div>
            </div>
        </fieldset>
    <% end %>
  </div>


</div>


</body>
